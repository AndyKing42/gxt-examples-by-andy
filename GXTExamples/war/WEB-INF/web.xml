<?xml version="1.0" encoding="UTF-8"?>
<web-app
  version="2.5"
  xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <context-param>
    <param-name>ConfigFilename</param-name>
    <param-value>cfg/GXTExamples.cfg</param-value>
  </context-param>
  <listener>
    <listener-class>org.greatlogic.gxtexamples.server.GXTExamplesServletContextListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>GXTExamplesRemoteServiceServlet</servlet-name>
    <servlet-class>org.greatlogic.gxtexamples.server.GXTExamplesRemoteServiceServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GXTExamplesRemoteServiceServlet</servlet-name>
    <url-pattern>/gxtexamples/GXTExamplesRemoteServiceServlet</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>GXTExamples.html</welcome-file>
  </welcome-file-list>
</web-app>